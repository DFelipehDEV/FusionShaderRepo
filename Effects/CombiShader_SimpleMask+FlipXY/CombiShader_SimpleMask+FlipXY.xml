<effect>
<name>CombiShader: Simple Mask + Flip Toggle</name>
<description>Colors and flip an object.</description>
<author>Simple Mask by Looki, Flip Toggle by chrilley, Combined by NaitorStudios</author>
<parameter>
		<name>Color</name>
		<code>fC</code>
		<description>Color</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Visibility</name>
		<code>fFade</code>
		<description>1 = Opaque mask, 0.5 = Half-transparent...</description>
		<type>float</type>
		<property>edit</property>
		<value>1</value>
</parameter>

<parameter>
<name>Flip Horizontal</name>
<variable>flipX</variable>
<type>float</type>
<property>checkbox</property>
<value>0</value>
<description>Flips image on the X-axis.</description>
</parameter>

<parameter>
<name>Flip Vertical</name>
<variable>flipY</variable>
<type>float</type>
<property>checkbox</property>
<value>0</value>
<description>Flips image on the Y-axis.</description>
</parameter>
</effect>