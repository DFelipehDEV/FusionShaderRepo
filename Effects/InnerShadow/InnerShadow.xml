<effect>
<name>Inner Shadow</name>
<description>Blurs the edges of the image and fills them with a color. You can offset the shadow.</description>
<author>NaitorStudios (Originally Inner Glow from Looki)</author>
<parameter>
	<name>Radius</name>
	<code>radius</code>
	<description>Radius of the shadow in pixels.</description>
	<type>float</type>
	<property>edit</property>
	<value>5</value>
</parameter>
<parameter>
	<name>Exponent</name>
	<code>exponent</code>
	<description>The higher, the sharper the shadow will be.</description>
	<type>float</type>
	<property>float</property>
	<value>2</value>
</parameter>
<parameter>
	<name>Color</name>
	<code>color</code>
	<description>Color of the shadow.</description>
	<type>int_float4</type>
	<property>COLOR</property>
	<value>0</value>
</parameter>
<parameter>
	<name>X Offset</name>
	<code>xOffset</code>
	<description></description>
	<type>float</type>
	<property>float</property>
	<value>0.0</value>
</parameter>
<parameter>
	<name>Y Offset</name>
	<code>yOffset</code>
	<description></description>
	<type>float</type>
	<property>float</property>
	<value>-0.1</value>
</parameter>

	<sampler>
		<index>0</index>
		<AddressU>border</AddressU>
		<AddressV>border</AddressV>
		<BorderColor>16777215</BorderColor>
	</sampler>
</effect>