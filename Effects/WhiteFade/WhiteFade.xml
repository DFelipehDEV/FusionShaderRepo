<effect>
<name>White Fade</name>
<description>Fades the texture to a targeted monochromatic color by a %</description>
<author>Pixelthief</author>
<parameter>
		<name>Fade Coef (float)</name>
		<code>fFade</code>
		<description>Fade % from 0.0 to 1.0</description>
		<type>float</type>
		<property>edit</property>
		<value>0.5</value>

</parameter>
<parameter>
		<name>Target Color (float)</name>
		<code>fBW</code>
		<description>Black = 0.0, White = 1.0</description>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>

</parameter>
</effect>
