<effect>
<name>Dynamic Inside Shadow</name>
<description>Blurring through direction and coefficient. (Thanks to Sphax for angle conversion)</description>
<author>Looki-(Mod by Zly)</author>

<parameter>
	<name>Coefficient</name>
	<code>fCoeff</code>
	<description>Strength of the blur.</description>
	<type>float</type>
	<property>edit</property>
	<value>0.1</value>
</parameter>

<parameter>
	<name>Angle</name>
	<code>fAngle</code>
	<description>direction of the blur.</description>
	<type>float</type>
	<property>edit</property>
	<value>90</value>
</parameter>

<parameter>
	<name>Opasity</name>
	<code>fOp</code>
	<description>Opasity.</description>
	<type>float</type>
	<property>edit</property>
	<value>0.025</value>
</parameter>

</effect>