<effect>
<name>CRT with Color Bleeding</name>
<author>Ported by NaitorStudios</author>
<description>https://perons.itch.io/godot-crt-shader</description>
<BackgroundTexture>1</BackgroundTexture>
<sampler>
<index>0</index>
<filter>point</filter>
<addressU>wrap</addressU>
<addressV>wrap</addressV>
</sampler>
<parameter>
	<name>Time</name>
	<code>TIME</code>
	<description>This must be constant for the full effect.</description>
	<type>float</type>
	<property>spin</property>
	<value>0.0</value>
</parameter>

<parameter>
	<name>Screen Width</name>
	<code>screen_width</code>
	<description></description>
	<type>float</type>
	<property>edit</property>
	<value>640</value>
</parameter>

<parameter>
	<name>Screen Height</name>
	<code>screen_height</code>
	<description></description>
	<type>float</type>
	<property>edit</property>
	<value>480</value>
</parameter>

<parameter>
	<name>Barrel Power</name>
	<code>BarrelPower</code>
	<description>This gives the curvature.</description>
	<type>float</type>
	<property>spin</property>
	<value>1.1</value>
</parameter>

<parameter>
	<name>Color Bleeding</name>
	<code>color_bleeding</code>
	<description></description>
	<type>float</type>
	<property>spin</property>
	<value>1.2</value>
</parameter>

<parameter>
	<name>Bleeding Range X</name>
	<code>bleeding_range_x</code>
	<description></description>
	<type>float</type>
	<property>spin</property>
	<value>3</value>
</parameter>

<parameter>
	<name>Bleeding Range Y</name>
	<code>bleeding_range_y</code>
	<description></description>
	<type>float</type>
	<property>spin</property>
	<value>3</value>
</parameter>

<parameter>
	<name>Lines Distance</name>
	<code>lines_distance</code>
	<description></description>
	<type>float</type>
	<property>spin</property>
	<value>4.0</value>
</parameter>

<parameter>
	<name>Scan Size</name>
	<code>scan_size</code>
	<description></description>
	<type>float</type>
	<property>spin</property>
	<value>2.0</value>
</parameter>

<parameter>
	<name>Scanline Alpha</name>
	<code>scanline_alpha</code>
	<description></description>
	<type>float</type>
	<property>spin</property>
	<value>0.9</value>
</parameter>

<parameter>
	<name>Lines Velocity</name>
	<code>lines_velocity</code>
	<description></description>
	<type>float</type>
	<property>spin</property>
	<value>30.0</value>
</parameter>
</effect>
