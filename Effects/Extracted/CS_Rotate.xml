<effect>
<name>Rotate</name>
<description>Rotate the picture of the object (not the object itself)</description>
<author>Sphax - Flavien Clermont, Improved by NaitorStudios</author>
<company>Complex-softwares</company>
<website>http://complex.softwares.free.fr</website>
<parameter>
		<name>Angle</name>
		<code>fAngle</code>
		<description>Angle degree</description>
		<type>float</type>
		<property>edit</property>
		<value>0.0</value>
</parameter>
<parameter>
		<name>X</name>
		<code>fX</code>
		<description>X center of the rotation</description>
		<type>float</type>
		<property>edit</property>
		<value>0.5</value>
		<min>0.0</min>
</parameter>
<parameter>
		<name>Y</name>
		<code>fY</code>
		<description>Y center of the rotation</description>
		<type>float</type>
		<property>edit</property>
		<value>0.5</value>
		<min>0.0</min>
</parameter>
	<sampler>
		<index>0</index>
		<filter>linear</filter>
		<AddressU>border</AddressU>
		<AddressV>border</AddressV>
		<BorderColor>16777215</BorderColor>
	</sampler>
</effect>