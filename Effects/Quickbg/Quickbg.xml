<effect>
<name>QuickBG</name>
<author>Nobuyuki (nobu@subsoap.com)</author>
<description>Apply a tiled texture to an object.  Beta 1.</description>

<parameter>
		<name>Intensity</name>
		<code>Intensity</code>
		<description>Controls the intensity of the effect.</description>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>
		<min>0.0</min>
		<max>1.0</max>
</parameter>
<parameter>
		<name>Width</name>
		<code>tw</code>
		<description>Texture width.</description>
		<type>float</type>
		<property>edit</property>
		<value>32</value>
		<min>0</min>
		<max>2048</max>
</parameter>
<parameter>
		<name>Height</name>
		<code>th</code>
		<description>Texture height.</description>
		<type>float</type>
		<property>edit</property>
		<value>32</value>
		<min>0</min>
		<max>2048</max>
</parameter>
<parameter>
		<name>xOffset</name>
		<code>xOffset</code>
		<description>Texture X offset.</description>
		<type>float</type>
		<property>spin</property>
		<value>0.0</value>
		<min>0.0</min>
		<max>1.0</max>
</parameter>
<parameter>
		<name>yOffset</name>
		<code>yOffset</code>
		<description>Texture X offset.</description>
		<type>float</type>
		<property>spin</property>
		<value>0.0</value>
		<min>0.0</min>
		<max>1.0</max>
</parameter>
<parameter>
		<name>Texture</name>
		<code>Overlay</code>
		<description>Texture to use as overlay.</description>
		<type>image</type>
		<property>image</property>

</parameter>
</effect>
