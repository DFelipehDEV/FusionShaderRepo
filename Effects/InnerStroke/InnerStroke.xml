<effect>
<name>Inner Stroke</name>
<author>NaitorStudios</author>
<description>Draws a stroke around an object in the inner side. It doesn't support Alpha Channel.</description>
<parameter>
		<name>Stroke color</name>
		<code>sColor</code>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Stroke Size</name>
		<code>size</code>
		<type>float</type>
		<property>edit</property>
		<value>1</value>
</parameter>
<parameter>
		<name>Fill opacity</name>
		<code>fOpacity</code>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>
		<min>0.0</min>
		<max>1.0</max>
</parameter>
	<sampler>
		<index>0</index>
		<AddressU>border</AddressU>
		<AddressV>border</AddressV>
		<BorderColor>16777215</BorderColor>
	</sampler>
</effect>